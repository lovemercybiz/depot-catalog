<div class="container-fluid">
<%# <div class="col col-xs col-sm col-md col-lg col-xl"> %>
<h1>Products</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <td colspan="3">
        <%= link_to 'Add New Product', new_product_path %>
      </td>
    </tr>
  </thead>

  <tfoot>
    <tr>
      <td colspan="3">
        <%= link_to 'Add New Product', new_product_path %>
      </td>
    </tr>
  </tfoot>

  <tbody>
    <% @products.each do |product|%>
      <tr class="<%= cycle('list_line_odd', 'list_line_even') %>"><%# Why? - not working. Supposed to be like  table-striped but isn't %>

        <td style="height: 275px; width: 200px;" class="image">
            <%= image_tag(product.image_url, class: 'list_image',)  %> 
             <%# <%= image_tag(product.image_url, class: 'list_image',size: "200x200")  << Hard code the image size%>      
        </td>
        <%# <div style="height:400px; width:400px"></div> %>
        

        <td class="description">
            <h1><% product.title %></h1>
            <p>
              <%= truncate(strip_tags(product.description), length: 80)%>
              <%# Strips description of HTML tags then will only show the first 80 chars.  %>
            </p>
        </td>

        <td class="actions">
          <ul>
            <li class="btn btn-sm btn-info"><%= link_to 'Show', product %></li><br><br>
            <li class="btn btn-sm btn-warning"><%= link_to 'Edit', edit_product_path(product) %></li><br><br>
            <li class="btn btn-sm btn-danger"><%= link_to 'Destroy',
                             product,
                             method: :delete,
                             data: { confirm: 'Are you sure?'}%>
            
            </li>
          </ul>
        </td><%# end of class='actions' %>
      </tr>
      <%end%>
  </tbody>
</table>

<br>
</div>
