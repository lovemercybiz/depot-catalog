<!DOCTYPE html>
<html>
  <head>
    <title>Open source content</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'jquery-3.3.1.min.js', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'bootstrap.min.js', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <%#= image_tag 'saguiLogo.svg', alt: 'Sagui' %>
      <div id="navTop" style="height: 5.5em;">
          <%= image_tag('saguiLogo.svg', alt: 'home', class: 'svg') %> <h1><%= @page_title%><h1>
      </div>

      <div class="row">

        <div id="navSide" class="col-lg-2 col-xl-2">
          <nav class="navbar navbar-expand-lg text-uppercase">
              <button class="navbar-toggler" id="customToggle" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
              
              <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto flex-column">
                  <li class="nav-item">  <a id="navLink" class="nav-link" href="/">Home</a></li>
                  <li class="nav-item">  <a id="navLink" class="nav-link" href="/questions">Questions</a></li>
                  <li class="nav-item">  <a id="navLink" class="nav-link" href="/news">News</a></li>
                  <li class="nav-item">  <a id="navLink" class="nav-link" href="/contact">Contact</a></li>

                  <form class="col-form-label-sm">
                  <input class="form-control" type="search" placeholder="Search" aria-label="Search">
                  <button class="btn btn-sm btn-outline-dark btn-block" type="submit">Search</button>
                </form>
                </ul>
              </div>
              </div>
          </nav><%# End of navbar %>

          <div class="col">
            <main class='<% controller.controller_name%>'>
                <%= yield %>
            </main>
          </div>
      </div>


                                        <p class="text-center"><small>Made with ðŸ’– by Love</small></p>
  </body>
</html>
